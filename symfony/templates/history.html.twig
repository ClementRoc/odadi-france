{% extends '_layout.html.twig' %}

{% import 'macro/image.html.twig' as imageMacro %}
{% import 'macro/button.html.twig' as buttonMacro %}

{% set pageTemplate = 'history' %}
{% set pageTitle = 'Histoire' %}
{% set titleTag = 'history.titleTag'|trans %}
{% set metaDescription = 'history.metaDescription'|trans %}

{% block body %}
    {% include 'include/header.html.twig' %}
    {% include 'include/donation-menu.html.twig' %}
    <div class="history lazyload-right">
        {% include 'include/page-header.html.twig' %}
        <div class="history-content">
            <img class="history-background" src="{{ asset('build/img/home/background.png') }}" alt="">
            <h1 class="presentation-title mobile">{{ 'history.whoweare.presentation.title'|trans }}</h1>
            <div class="history-content-whoarewe">
                <img class="history-content-whoarewe-img" src="{{ asset('build/img/home/header/header-img.png') }}" alt="Madagascar">
                <img class="history-content-whoarewe-background" src="{{ asset('build/img/home/header/background.jpg') }}" alt="">
                <div class="presentation">
                    <h1 class="presentation-title desktop">{{ 'history.whoweare.presentation.title'|trans }}</h1>
                    <p class="presentation-text">{{ 'history.whoweare.presentation.text'|trans }}</p>
                </div>
            </div>
            <div class="history-content-creation">
                <div class="presentation">
                    <h1 class="presentation-title">{{ 'history.creation.presentation.title'|trans }}</h1>
                    <p class="presentation-text">{{ 'history.creation.presentation.text'|trans }}</p>
                </div>
                <img class="history-content-creation-img" src="{{ asset('build/img/history/creation.png') }}" alt="Repas">
            </div>
            <div class="history-content-association">
                <div class="presentation">
                    <h1 class="presentation-title">{{ 'history.association.presentation.title'|trans }}</h1>
                    <p class="presentation-text">{{ 'history.association.presentation.text'|trans }}</p>
                </div>
            </div>
            <div class="history-content-team">
                <h1 class="history-content-team-title">TOUTE L'Ã‰QUIPE</h1>
                <div class="history-content-team-member">
                    {% for member in members %}
                    <div class="member">
                        {{ imageMacro.imgMember(member.picture, member.mail) }}
                        <h1 class="member-text">{{ member.name }}</h1>
                    </div>
                    {% endfor %}
                </div>
                {{ buttonMacro.btnLink('history-content-team-button', 'yellow', 'app_contact', '', 'Nous contacter', 'build/img/logos/arrow.png') }}
            </div>
        </div>
    </div>
    <img class="team-background" src="{{ asset('build/img/history/team/team-background.png') }}" alt="">
    {% include 'include/footer.html.twig' %}
{% endblock %}
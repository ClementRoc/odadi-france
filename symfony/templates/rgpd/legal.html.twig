{% extends '_layout.html.twig' %}

{% set pageTemplate = 'legal' %}
{% set pageTitle = 'Mentions légales' %}
{% set titleTag = 'legal.titleTag'|trans %}
{% set metaDescription = 'legal.metaDescription'|trans %}

{% block body %}
    {% include 'include/header.html.twig' %}
    {% include 'include/donation-menu.html.twig' %}
        <div class="legal lazyload">
            {% include 'include/page-header.html.twig' %}
            <div class="legal-content">
                <div class="editor">
                    <h1 class="editor-title">{{ 'legal.content.editor.title'|trans }}</h1>
                    <p class="editor-text">{{ 'legal.content.editor.text'|trans }}</p>
                    <ul class="editor-list">
                        <li><strong>Personne morale : </strong>{{ 'legal.content.editor.moral-person'|trans }}</li>
                        <li><strong>Raison sociale : </strong>{{ 'legal.content.editor.social-reason'|trans }}</li>
                        <li><strong>Siège social : </strong>{{ 'legal.content.editor.qg'|trans }}</li>
                    </ul>
                </div>
                <div class="creator">
                    <h1 class="creator-title">{{ 'legal.content.creator.title'|trans }}</h1>
                    <h3>Conception du site</h3>
                    <ul class="creator-list">
                        <li><strong>Société : </strong>{{ 'legal.content.creator.conception.company'|trans }}</li>
                        <li><strong>Réseaux Sociaux : </strong><a href="{{ 'odadi.conception.khaos.instagram'|trans }}" target="_blank">{{ 'legal.content.creator.conception.social'|trans }}</a></li>
                    </ul>
                    <h3>Réalisation du site</h3>
                    <ul class="creator-list">
                        <li><strong>Personne morale : </strong>{{ 'legal.content.creator.realisation.moral-person'|trans }}</li>
                        <li><strong>Siège social : </strong>{{ 'legal.content.creator.realisation.qg'|trans }}</li>
                    </ul>
                </div>
            </div>
        </div>
    {% include 'include/footer.html.twig' %}
{% endblock %}